---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button">;

const attrs = Astro.props;
---

<button class="hamburger" {...attrs}>
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
</button>

<style>
    .hamburger {
        margin-right: 20px;
        cursor: pointer;
        border: none;
        background: none;
    }

    .hamburger .line {
        display: block;
        width: 40px;
        height: 5px;
        margin-bottom: 10px;
        background-color: #ff9776;
    }
</style>
