---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";

const pageTitle = "About me";

const identity = {
	firstName: "Andr√©",
	country: "Brazil",
	occupation: "Senior Full-stack Developer",
	hobbies: ["games", "development", "speedrunning"],
};

const skills = [
	"HTML",
	"CSS",
	"JavaScript",
	"TypeScript",
	"Astro",
	"React",
	"Svelte",
];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = 700;
const textCase = "uppercase";
---

<style is:global define:vars={{ skillColor, fontWeight, textCase }}>
	h1 {
		color: purple;
		font-size: 4rem;
	}
	.skill {
		color: var(--skillColor);
		font-weight: var(--fontWeight);
		text-transform: var(--textCase);
	}
</style>

<BaseLayout title={pageTitle}>
	<h2>... and this Astro tutorial</h2>

	<p>A few facts about me:</p>

	<ul>
		<li>My name is {identity.firstName}</li>
		<li>
			I live in {identity.country} and I work as a {identity.occupation}.
		</li>
		{
			identity.hobbies.length >= 2 && (
				<li>
					Two of my hobbies are: {identity.hobbies[0]} and{" "}
					{identity.hobbies[1]}
				</li>
			)
		}
	</ul>

	<p>My skills are:</p>

	<ul>
		{skills.map((skill) => <li class="skill">{skill}</li>)}
	</ul>

	{happy && <p>I am happy to be learning Astro!</p>}

	{finished && <p>I finished this tutorial!</p>}

	{
		goal === 3 ? (
			<p>My goal is to finish in 3 days.</p>
		) : (
			<p>My goal is not 3 days.</p>
		)
	}
</BaseLayout>

<script>
	import "../scripts/menu";
</script>
